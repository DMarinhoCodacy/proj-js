{
    "compilerOptions": {
        /* Basic Options */
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "isolatedModules": false,                       
        "jsx": "react-native",                          /* see readme */
        // "lib": [],                                   /* libraries to include formerly: ["es7", "es2018.promise", "es2017.object"] */
        "noEmit": true,
        "pretty": true,
        "skipLibCheck": true,                          
        "target": "esnext",
        
        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "ESNext",                             /* See readme */

        /* Source Map Options */
        "baseUrl": "./",
        "paths": {
            "*": ["src/types/*"],
            "gametime/*": ["src/*"],
            "@root/*": ["*"]
        },

        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        // "noFallthroughCasesInSwitch": true,
    },
    "exclude": [
      "node_modules",
      "src/metro.config.js",
      "src/jest.config.jsg.js",
      "src/react-native-config.js",
      "ios/*",
    ],
    "compileOnSave": true,
}
