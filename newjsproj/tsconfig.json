{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~root/*": ["./*"],
      "~src/*": ["./src/*"],
      "~app/*": ["./src/app/*"],
      "~shared/*": ["./src/app/components/Shared/*"],
      "~config/*": ["./src/config/*"],
      "~public/*": ["./src/public/*"],
      "~routes/*": ["./src/routes/*"],
      "~tests/*": ["./tests/*"],
      "~helpers/*": ["./src/app/helpers/*"],
      "~components/*": ["./src/app/components/*"],
      "~contexts/*": ["./src/app/contexts/*"],
      "~apollo/*": ["./src/app/apollo/*"],
      "~enums/*": ["./src/app/enums/*"]
    }
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}