{
  "parser": "@babel/eslint-parser",
  "extends": ["eslint:recommended"],
  "env": {
    "jest": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "globals": {
    "__filename": true,
    "process": true,
    "require": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": ["./src"],
        "alias": {
          "test": "./test"
        }
      }
    }
  },
  "rules": {
    "curly": "error",
    "dot-notation": "error",
    "eqeqeq": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "keyword-spacing": "error",
    "newline-per-chained-call": [
      "warn",
      {
        "ignoreChainWithDepth": 2
      }
    ],
    "no-extra-semi": "error",
    "no-floating-decimal": "error",
    "no-redeclare": "error",
    "no-regex-spaces": "error",
    "no-self-assign": "error",
    "no-unsafe-negation": "error",
    "no-var": "error",
    "quotes": ["error", "single"],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ],
    "comma-dangle": ["error", "always-multiline"],
    "no-prototype-builtins": "off"
  }
}